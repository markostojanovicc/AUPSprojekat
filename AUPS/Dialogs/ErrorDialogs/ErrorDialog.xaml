<Window x:Class="AUPS.Dialogs.ErrorDialogs.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AUPS.Dialogs.ErrorDialogs"
        mc:Ignorable="d"
        Title="ErrorDialog" Height="250" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Padding="10" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25" TextWrapping="Wrap" TextAlignment="Center" Text="{Binding ErrorMessage}"/>
        <Button IsCancel="True" Style="{StaticResource loginbtnstyle}" Content="Ok" Grid.Row="1" Cursor="Hand" Height="35" Width="100"/>
    </Grid>
</Window>
